@{
    ViewData["Title"] = "Formulario";
}

@using (@Html.BeginForm("Guardar", "Cliente", FormMethod.Post, new { @class = "form-horizontal" }))
{

    <div class="signup-form-container">

        <form role="form" id="register-form" autocomplete="off">

            <div class="form-header">
                <h3 class="form-title"><i class="fa fa-user"></i>Registrar Cliente</h3>
                <br>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                    <span class="col-md-6">
                        @Html.TextBox("rut", null, new { @class = "form-control", placeholder = "Ingresar Rut" })
                    </span>
                </div>
                <span class="help-block" id="error"></span>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                    <span class="col-md-6">
                        @Html.TextBox("nombre", null, new { @class = "form-control", placeholder = "Ingresar Nombre" })
                    </span>
                </div>
                <span class="help-block" id="error"></span>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                    <span class="col-md-6">
                        @Html.TextBox("apellido", null, new { @class = "form-control", placeholder = "Ingresar Apellido" })
                    </span>
                </div>
                <span class="help-block" id="error"></span>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-map-marker"></span></div>
                    <span class="col-md-6">
                        @Html.TextBox("direccion", null, new { @class = "form-control", placeholder = "Ingresar Direccion" })
                    </span>
                </div>
                <span class="help-block" id="error"></span>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-align-justify"></span></div>
                    <span class="col-md-6">
                        @Html.DropDownList("tipocliente", new List<SelectListItem>
               {
                   new SelectListItem{Text="Ingrese Tipo Cliente", Value=" - "},
                   new SelectListItem{Text="Contado", Value="Contado"},
                   new SelectListItem{Text="Efectivo", Value="Efectivo"},
                   new SelectListItem{Text="Credito", Value="Credito"},
                   new SelectListItem{Text="Documentado", Value="Documentado"}

               },
    new { @class = "form-control" }
    )
                    </span>
                </div>
            </div>

            <div class="row">

                <div class="form-footer">
                    <button type="submit" class="btn btn-info">
                        <span class="glyphicon glyphicon-log-in"></span> Guardar Cliente
                    </button>
                </div>


        </form>

    </div>


}